@page
@model RazorPizzaria.Pages.PizzaModel
@{
}

<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">Our Great Selection of Pizzas!</h1>
        <h4 class="mainSubtitle">Choose one, or try our Pizza Builde! Then Ordr and Done!</h4>
        <h4 class="mainSubtitle">No need to give any of your details!</h4>
        <p class="smallText"><i>Only one Pizza per order.</i></p>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 row makeYourOwnDiv">
                    <div class="col-4">
                        <img class="w-100 mt-2 mb-2" src="~/images/custompizza.png" />
                    </div>
                    <div class="col-8 align-items-center">
                        <div class="align-middle makeYourOwnText">
                            <h3 style="text-align: left">Create Your Own Pizza</h3>
                            <p style="text-align: left">Make Your Own Pizza with our Pizza Maker!</p>
                            <a class="btn btn-primary" style="float: left" asp-area="" asp-page="Forms/CustomPizza">Try Now</a>
                        </div>
                    </div>
                </div>
            </div>
            @foreach (var pizza in Model.fakePizzaDB)
            {
                var imagePath = "~/images/" + (pizza.ImageTitle + ".png");
                    <div class="col-4 mb-5">
                    <div class="mx-auto px-5 pt-5 pb-5 bg-light">
                    <a class="pizza-img bg-light" asp-area="" asp-page="Checkout/Checkout" asp-route-ImageTitle="@pizza.ImageTitle" asp-route-PizzaPrice="@pizza.finalPrice">
                       <img src="@imagePath" class="w-100" asp-append-version="true" />
                     </a>
                     <p>@pizza.PizzaName</p>
                     </div>
                     <br />
                    </div>
            }
        </div>
    </div>
</div>
